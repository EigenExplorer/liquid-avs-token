{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strictNullChecks": true,
        "skipLibCheck": true,

        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
